{
  "name": "cntdys-ui",
  "version": "0.1.0",
  "description": "cntdys-ui",
  "scripts": {
    "build": "tsc && npm run build:dp && npm run build:rp && bundlesize",
    "build:dp": "npm run build:dp:module && npm run build:dp:nomodule",
    "build:dp:module": "rollup -c rollup.dp.config.js -f es -o dist/date_picker.js",
    "build:dp:nomodule": "rollup -c rollup.dp.config.js -f iife -o dist/date_picker-nomodule.js",
    "build:rp": "npm run build:rp:module && npm run build:rp:nomodule",
    "build:rp:module": "rollup -c rollup.rp.config.js -f es -o dist/range_picker.js",
    "build:rp:nomodule": "rollup -c rollup.rp.config.js -f iife -o dist/range_picker-nomodule.js",
    "dev": "tsc -w & npm run dev:dp & npm run dev:rp",
    "dev:dp": "rollup -c rollup.dp.config.js -w -f es -o dist/date_picker.js & serve  -p 3000 dist",
    "dev:rp": "rollup -c rollup.rp.config.js -w -f es -o dist/range_picker.js & serve  -p 4000 dist",
    "format": "prettier-standard '**/*.ts'",
    "lint": "tslint --project tsconfig.json",
    "pretest:dev": "tsc -p test/tsconfig.json",
    "test:dev": "tsc -p test/tsconfig.json -w & watchify test/main.js -o test/test.js",
    "test": "npm run lint && bundlesize"
  },
  "keywords": [],
  "author": "Ziga Vidic <zigomir@gmail.com> (https://zigomir.com/)",
  "license": "MIT",
  "bundlesize": [
    {
      "path": "./dist/date_picker.js",
      "maxSize": "4.5 kB"
    },
    {
      "path": "./dist/date_picker-nomodule.js",
      "maxSize": "4.5 kB"
    },
    {
      "path": "./dist/range_picker.js",
      "maxSize": "5.5 kB"
    },
    {
      "path": "./dist/range_picker-nomodule.js",
      "maxSize": "5 kB"
    }
  ],
  "dependencies": {
    "cntdys": "^0.2.5"
  },
  "devDependencies": {
    "@types/tape": "^4.2.31",
    "bundlesize": "^0.15.3",
    "prettier-standard": "^7.0.3",
    "rollup": "^0.50.0",
    "rollup-plugin-babel-minify": "^3.1.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-svelte": "^3.1.0",
    "serve": "^6.4.0",
    "tape": "^4.8.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.1",
    "watchify": "^3.9.0"
  }
}
