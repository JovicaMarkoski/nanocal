{
  "name": "cntdys-ui",
  "version": "0.1.0",
  "description": "cntdys-ui",
  "scripts": {
    "build:dp": "npm run build:dp:module && npm run build:dp:nomodule",
    "build:dp:module": "tsc && rollup -c rollup.dp.config.js -f es -o public/date_picker.js",
    "build:dp:nomodule": "tsc && rollup -c rollup.dp.config.js -f iife -o public/date_picker-nomodule.js",
    "dev:dp": "tsc -w & rollup -c rollup.dp.config.js -w -f es -o public/date_picker.js & serve  -p 3000 public",
    "build:rp": "npm run build:rp:module && npm run build:rp:nomodule",
    "build:rp:module": "tsc && rollup -c rollup.rp.config.js -f es -o public/range_picker.js",
    "build:rp:nomodule": "tsc && rollup -c rollup.rp.config.js -f iife -o public/range_picker-nomodule.js",
    "dev:rp": "tsc -w & rollup -c rollup.rp.config.js -w -f es -o public/range_picker.js & serve  -p 4000 public",
    "format": "prettier-standard 'src/**/*.ts'",
    "test": "npm run lint && tsc -p test/tsconfig.json && npm run tape && bundlesize",
    "tape": "tape test/**/*.js",
    "test:dev": "tsc -p test/tsconfig.json -w",
    "lint": "tslint --project tsconfig.json",
    "start": "serve -p 3000 public"
  },
  "keywords": [],
  "author": "Ziga Vidic <zigomir@gmail.com> (https://zigomir.com/)",
  "license": "MIT",
  "bundlesize": [
    {
      "path": "./public/date_picker.js",
      "maxSize": "4.5 kB"
    },
    {
      "path": "./public/date_picker-nomodule.js",
      "maxSize": "4.5 kB"
    },
    {
      "path": "./public/range_picker.js",
      "maxSize": "5.5 kB"
    },
    {
      "path": "./public/range_picker-nomodule.js",
      "maxSize": "5 kB"
    }
  ],
  "dependencies": {
    "cntdys": "^0.2.5"
  },
  "devDependencies": {
    "@types/tape": "^4.2.31",
    "bundlesize": "^0.15.3",
    "prettier-standard": "^7.0.3",
    "rollup": "^0.50.0",
    "rollup-plugin-babel-minify": "^3.1.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-svelte": "^3.1.0",
    "serve": "^6.4.0",
    "tape": "^4.8.0",
    "tslint": "^5.8.0",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^2.6.1"
  }
}
